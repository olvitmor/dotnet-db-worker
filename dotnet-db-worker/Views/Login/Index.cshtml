@model dotnet_db_worker.Models.LoginModel

@{
    var titleText = "DB worker - Login";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@titleText</title>
    <link rel="stylesheet" href="~/libs/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col"></div>

            <div class="col-6 align-content-center">
                <form asp-controller="Login" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="usernameInput" class="form-label">Username</label>
                        <input asp-for="UserName" type="text" class="form-control" id="usernameInput">
                    </div>
                    <div class="mb-3">
                        <label for="passwordInput" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="passwordInput">
                    </div>
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>                        
                        <div class="col">
                            <span class="text-danger" id="login_error_message"></span>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col"></div>
        </div>
    </div>
    <script src="~/libs/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>